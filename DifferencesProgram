package discussion3Arrays;

	import java.util.ArrayList;

	public class DifferenceArraysArrayLists {

	    public static void main(String[] args) {

	        System.out.println("========== ARRAY DEMONSTRATION ==========\n");

	        // ARRAYS HAVE FIXED SIZE
	        // When we create an array, we must define its size.
	        // The size CANNOT be changed later.
	        int[] num = new int[3];  // fixed size = 3

	        // ARRAYS STORE PRIMITIVE TYPES DIRECTLY
	        num[0] = 10;
	        num[1] = 20;
	        num[2] = 30;

	        // num[3] = 40; 
	        // This would cause ArrayIndexOutOfBoundsException
	        // because the array size is fixed.

	        System.out.println("Array elements:");
	        for (int i = 0; i < num.length; i++) {
	            // Arrays use .length (NOT size())
	            System.out.println("Index " + i + ": " + num[i]);
	        }

	        // ARRAYS DO NOT HAVE BUILT-IN METHODS (add, remove, etc.)
	        // To resize an array, we must create a new one manually.

	        int[] newNum = new int[5]; // create bigger array

	        // Manually copying old elements
	        for (int i = 0; i < num.length; i++) {
	            newNum[i] = num[i];
	        }

	        newNum[3] = 40;
	        newNum[4] = 50;

	        System.out.println("\nResized array (manually created):");
	        for (int num1 : newNum) {
	            System.out.println(num1);
	        }


	        System.out.println("\n========== ARRAYLIST DEMONSTRATION ==========\n");

	        // ARRAYLIST HAS DYNAMIC SIZE
	        // No need to define size in advance.
	        ArrayList<Integer> list = new ArrayList<>();

	        // ARRAYLIST CANNOT STORE PRIMITIVES DIRECTLY
	        // It uses wrapper classes (Integer instead of int).
	        list.add(10);
	        list.add(20);
	        list.add(30);

	        // Automatically resizes
	        list.add(40);

	        System.out.println("ArrayList elements:");
	        for (int i = 0; i < list.size(); i++) {
	            // ArrayList uses .size() (NOT length)
	            System.out.println("Index " + i + ": " + list.get(i));
	        }

	        // ARRAYLIST HAS BUILT-IN METHODS
	        list.remove(1); // removes element at index 1

	        System.out.println("\nAfter removing index 1:");
	        for (Integer num1 : list) {
	            System.out.println(num1);
	        }

	        // ARRAYLIST ONLY STORES OBJECTS
	        // Example with Strings (which are objects)
	        ArrayList<String> names = new ArrayList<>();
	        names.add("Geoff");
	        names.add("Sofia");
	        names.add("Jaden");

	        System.out.println("\nFirst name in ArrayList: " + names.get(0));

	        System.out.println("\n========== KEY DIFFERENCES ==========");
	        System.out.println("1. Array size is FIXED.");
	        System.out.println("2. ArrayList size is DYNAMIC.");
	        System.out.println("3. Array stores primitives directly.");
	        System.out.println("4. ArrayList uses wrapper classes (Integer, Double, etc.).");
	        System.out.println("5. Array uses .length, ArrayList uses .size().");
	        System.out.println("6. Array has no built-in add/remove methods.");
	        System.out.println("7. ArrayList has built-in add(), remove(), get() methods.");
	    }
	}
